@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<ThemeViewModel>

@foreach (var item in Model)
{
    <article class="blog-post">
        <div class="blog-post-image">
            <a href="post.html"><img src="images/750x500-1.jpg" alt=""></a>
        </div>
        <div class="blog-post-body">
            <h2><a href="post.html">@item.Title</a></h2>
            <div class="post-meta"><span>by <a href="#">@item.Author</a></span>/<span><i class="fa fa-clock-o"></i>March 14, 2015</span>/<span><i class="fa fa-comment-o"></i> <a href="#">343</a></span></div>
            <p>@item.Content</p>
            <div class="read-more"><a href="#">Continue Reading</a></div>
        </div>
    </article>
}

@model ThemeViewModel

<article class="blog-post">
    <div class="blog-post-image">
        <a href="post.html"><img src="images/750x500-5.jpg" alt=""></a>
    </div>
    <div class="blog-post-body">
        <h2><a href="post.html">@Model.Title</a></h2>
        <div class="post-meta"><span>by <a href="#">@Model.Author.UserName</a></span>/<span><i class="fa fa-clock-o">
            </i>@Model.UpdatedOn</span>/<span><i class="fa fa-comment-o"></i> 
            
            <a href="#">@Model.Comments.Count</a></span></div>
        <div class="blog-post-text">
            @Model.Content
        </div>
        @Html.ActionLink("Add New Comment", "Create", "Comment", new { id = Model.Id }, new { @class = "btn btn-default" })
        <div id="div1">
            
            @Ajax.ActionLink("Show Comments", "ShowComment", "Comment", new { id = Model.Id },
             new AjaxOptions
             {
                 //HttpMethod = "POST",
                 InsertionMode = InsertionMode.Replace,
                 UpdateTargetId = "div1",

             }, new { @class = "btn btn-default" })
            
        </div>

    </div>
</article>

